							"type": "string"
						},
						"EmailPromotion": {
							"type": "string"
						},
						"AddressLine1": {
							"type": "string"
						},
						"AddressLine2": {
							"type": "string"
						},
						"City": {
							"type": "string"
						},
						"StateProvinceName": {
							"type": "string"
						},
						"PostalCode": {
							"type": "string"
