						},
						"LastName": {
							"type": "string"
						},
						"Suffix": {
							"type": "string"
						},
						"JobTitle": {
							"type": "string"
						},
						"TxNUM": {
							"type": "string"
						},
						"PhoneNumberType": {
							"type": "string"
						},
